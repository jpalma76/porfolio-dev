---
import Layout from '@/layouts/Layout.astro';
import Badge from '@/components/Badge.astro';
import LinkedinIcon from '@/components/icons/LinkedinIcon.astro';
import GithubIcon from '@/components/icons/Github.astro';
import Briefcase from '@/components/Briefcase.astro';
import SocialPill from '@/components/SocialPill.astro';
import MailIcon from '@/components/icons/Mail.astro';
import Experience from '@/components/Experience.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import CodeIcon from '@/components/icons/CodeIcon.astro';
import Projects from '@/components/Projects.astro';


---

<Layout 
	title="Portfolio de Juan Palma (jpalma76) - Desarrollador y Programador Web con 2 años de experiencia"
	description="Desarrollo Frontend Contactame para crear y desarrollar tu aplicación web o móvil."
	>
	<main class="mx-16 px-4">

		<SectionContainer class="mt-10" id="sobre-mi">
			<img 
			class="rounded-full size-12 mb-2" 
			src="https://portafolio-juan-palma.netlify.app/images/foto-mia.jpeg" 
			alt="mi foto"
		/>
			<h1 
				class="text-white text-2xl lg:text-3xl font-bold flex gap-x-3 mb-4 pb-6 lg:pb-10"
			>
				Hey, soy Juan Palma, desarrollador Frontend <div class="flex justify-center items-center text-center"><Badge>Disponible para Trabajar</Badge></div>
			</h1>
			<h2 class="text-xl md:text-2xl max-w-[750px] text-pretty">
				+2 años de experiencia como <span class="text-yellow-200/90">Desarrollador Web</span>, especializado en Frontend, de <span class="text-red-200/60">Santiago de Chile</span>, este portfolio fue realizado con <span class="font-semibold text-blue-600/90">Astro, Tailwind y Flowbite</span>
			</h2>

			<nav class="flex gap-2 mt-8 flex-wrap">

				<SocialPill href="https://www.linkedin.com/in/juan-palma-alvarez/">
					<LinkedinIcon class="size-4 lg:size-6"/>
					Linkedin
				</SocialPill>

				<SocialPill href="https://github.com/jpalma76">
					<GithubIcon class="size-4 lg:size-6"/>
					GitHub
				</SocialPill>

				<SocialPill href="mailto:juan.palma.alvarez@gmail.com">
					<MailIcon class="size-4 lg:size-6"/>
					Email
				</SocialPill>
			</nav>
			<p class=" mt-16"><i class="text-sm text-stone-400 font-sans text-justify">La idea de este protafolio está sacada de un proyecto de <span class="font-bold text-gray-300/60">* Miguel angel Durán @Midudev *</span>, yo en lo personal todavía no tengo experiencia profesional desarrollando sitios web más que mis proyectos personales, pero el formato me gustó y todo sirve para aprender.</i></p>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-2xl font-semibolt mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-6"/>
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>
		
		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-semibolt mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7"/>
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>

	</main>
</Layout>
