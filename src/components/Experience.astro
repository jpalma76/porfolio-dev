---
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
  {
    date: "2023",
    title: "Realización varios cursos de programación",
    description:
      "Realización de varios cursos de programación web en Platzi y el programa Jóvenes Programadores de Biblioredes",
    link: "#",
  },
  {
    date: "2022",
    title: "Realización de varios cursos de Programación en Platzi y proyectos de Youtube.",
    description:
      "Realización de varios cursos de Programación en Platzi y proyectos de Youtube en lenguajes como html, css, javascript, php, c#, React, los que serán detallados en la sección Cursos.",
    link: "#",
  }
];
---

<ol class="relative border-s border-gray-200 dark:border-gray-700">
  {
    EXPERIENCE.map(experience => {
      return <li class="mb-10 ms-4">
        <ExperienceItem {...experience}/>
      </li>

    })
  }
</ol>
