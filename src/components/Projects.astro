---
import Html from "./icons/Html.astro"
import Css from "./icons/Css.astro"
import Javascript from "./icons/Javascript.astro"
import JQuery from "./icons/JQuery.astro"

const TAGS = {
  HTML: {
    name: 'HTML',
    class: 'bg-white text-[#73bcf6]',
    icon: Html 
  },
  CSS: {
    name: 'CSS3',
    class: 'bg-white text-[#73bcf6]',
    icon: Css,
  },
  JAVASCRIPT: {
    name: 'JavaScript',
    class: 'bg-white text-[#73bcf6]',
    icon: Javascript,
  },
  JQUERY: {
    name: 'JQuery',
    class: 'bg-white text-[#73bcf6]',
    icon: JQuery,
  }
}

const PROJECTS = [
  {
    title: 'Portfolio realizado con html, css y javascript',
    description: "Creado originalmente con html y css, posteriormente se utliza JavaScript renderizando los cursos utilizando distintas técnicas de renderizado dinámicos como fetch, jquery y foreach desde un array.",
    link: "https://portafolio-juan-palma.netlify.app/",
    github:"https://github.com/jpalma76/portafolio",
    image: "../projects/primer-portfolio-web.png",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.JQUERY]
  }
]
---

<ul class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({image, title, description, tags}) => (
      <article>
        <h3 class="text-xl font-semibold text-yellow-200">
          {title}
        </h3>
        
        <p class="text-lg mb4-text-pretty mb-4">
          {description}
        </p>
        
        <ul class="w-full grid grid-cols-2 md:grid-cols-3 gap-x-4 gap-y-1 items-center md:flex-row mb-2">
          {tags.map((tag) => {
            return (
              <li class="my-4">
                <span class={`flex gap-x-2 rounded-full text-md ${tag.class} max-w-[140px] py-2 justify-center`}>
                  <tag.icon class="size-6 rounded-sm" />{tag.name}
                </span>
              </li>
              )
            })
          }
        </ul>

        <a 
          href={PROJECTS[0].link}
          target="_blank"
          rel="noopener noreferrer"
        >
          <img 
            class="rounded-xl hover:opacity-70 hover:scale-105 w-300 h-auto mx-auto mt-5" 
            src={image} alt={`Captura de pantalla del proyecto ${image}`}
          />
          </a>
      </article>
    ))
  }
</ul>